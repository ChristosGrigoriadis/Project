@*@model IEnumerable<UberTappDeveloping.Models.Beer>*@
@model PagedList.IPagedList<UberTappDeveloping.Models.Beer>

@using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
}

<h2>Beers</h2>

@if (ViewContext.HttpContext.User.IsInRole("BeersManager"))
{
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
}

@using (Html.BeginForm("Index", "Beer", FormMethod.Get))
{
<p>
    Find By Name: @Html.TextBox("SearchString", ViewBag.CurrentFilter as string)
    <input type="submit" value="Search" />
    @*<input id="myInput" type="text" placeholder="Search..." />*@
</p>
}

<table class="table">
    <tr>
        <th id="thName">
            @Html.DisplayNameFor(model => model.First().Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().EBC)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().ABV)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().IBU)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().Description)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EBC)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ABV)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IBU)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            @if (ViewContext.HttpContext.User.IsInRole("BeersManager"))
            {
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                    @Html.ActionLink("Details", "Details")
                    @Html.ActionLink("Delete", "Delete")
                </td>
            }

        </tr>
    }

</table>
<br />

    Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

    @Html.PagedListPager(Model, page => Url.Action("Index",
        new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))

@section scripts
{
    <script>
        $(document).ready(function () {
            $("#myInput").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $(".table tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>
}