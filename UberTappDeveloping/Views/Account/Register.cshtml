@model UberTappDeveloping.ViewModels.RegisterViewModel

@{
    ViewBag.Title = "Register";
}

@*<style></style>*@

@*<style></style>*@

<h2>Create a new account (the boring stuff...)</h2>
<h6>Fields with (*) are required...</h6>

@using (Html.BeginForm("Register", "Account", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <h4>Login Details</h4>

    <div class="row">
        <div class="form-group col-md-6">
            @Html.LabelFor(u => u.Email)*
            @Html.TextBoxFor(u => u.Email, new { @class = "form-control" })
            @Html.ValidationMessageFor(u => u.Email)
        </div>
        <div class="form-group col-md-6">
            @Html.LabelFor(u => u.Username)*
            @Html.TextBoxFor(u => u.Username, new { @class = "form-control" })
            @Html.ValidationMessageFor(u => u.Username)
        </div>
    </div>

    <div class="row">
        <div class="form-group col-md-6">
            @Html.LabelFor(u => u.Password)*
            @Html.PasswordFor(u => u.Password, new { @class = "form-control" })
            @Html.ValidationMessageFor(u => u.Password)
        </div>
        <div class="form-group col-md-6">
            @Html.LabelFor(u => u.ConfirmPassword)*
            @Html.PasswordFor(u => u.ConfirmPassword, new { @class = "form-control" })
            @Html.ValidationMessageFor(u => u.ConfirmPassword)
        </div>
    </div>

    <h4>Personal Details</h4>

    <div class="row">
        <div class="form-group col-md-6">
            @Html.LabelFor(u => u.FirstName)
            @Html.TextBoxFor(u => u.FirstName, new { @class = "form-control" })
            @Html.ValidationMessageFor(u => u.FirstName)
        </div>
        <div class="form-group col-md-6">
            @Html.LabelFor(u => u.LastName)
            @Html.TextBoxFor(u => u.LastName, new { @class = "form-control" })
            @Html.ValidationMessageFor(u => u.LastName)
        </div>
    </div>

    <div class="row">
        <div class="form-group col-md-6">
            @Html.LabelFor(u => u.BirthDate)
            @Html.TextBoxFor(u => u.BirthDate, "{0:dd/MMM/yyyy}", new { @class = "form-control", type = "date" })
            @Html.ValidationMessageFor(m => m.BirthDate)
        </div>
        <div class="form-group col-md-6">
            @Html.LabelFor(u => u.Gender)
            @Html.EnumDropDownListFor(u => u.Gender, "--- Select ---", new { @class = "form-control" })
        </div>
    </div>

    <h4>Location Details</h4>

    <div class="row">
        <div class="form-group col-md-6">
            @Html.LabelFor(u => u.LocationId)
            @Html.DropDownListFor(u => u.LocationId, new SelectList(Model.Locations, "Id", "Display"), " --- Select --- ", new { @class = "form-control" })
            @Html.ValidationMessageFor(u => u.LocationId)
        </div>
        <div class="form-group col-md-6">
            @Html.LabelFor(u => u.IsVenueOwner)
            @Html.CheckBoxFor(u => u.IsVenueOwner)
        </div>
    </div>

    <div id="btnRow" class="row">
        <div class="form-group col-md-12">
            <button type="submit" class="btn btn-primary">Join UberTap (The fun stuff!!!)</button>
        </div>
    </div>

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
