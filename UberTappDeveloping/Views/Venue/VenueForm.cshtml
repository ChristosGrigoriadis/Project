@model UberTappDeveloping.ViewModels.VenueFormViewModel
@{
    ViewBag.Title = "VenueForm";
}

<h2>Venue Form</h2>

@using (Html.BeginForm(Model.ActionName, "Venue"))
{
    @Html.HiddenFor(v => v.Venue.Id)
    <div class="form-group">
        @Html.LabelFor(v => v.Venue.Name)
        @Html.TextBoxFor(v => v.Venue.Name, new { @class = "form-control", autofocus = true })
        @Html.ValidationMessageFor(v => v.Venue.Name)
    </div>

    <div class="form-group">
        @Html.LabelFor(v => v.Venue.Manager)
        @Html.TextBoxFor(v => v.Venue.Manager, new { @class = "form-control", @Value = Model.ManagerName })
        @Html.ValidationMessageFor(v => v.Venue.Manager)
    </div>

    <div class="form-group">
        @Html.LabelFor(v => v.Venue.DateOpened)
        @Html.TextBoxFor(v => v.Venue.DateOpened, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
    </div>

    <div class="form-group">
        @Html.LabelFor(v => v.Venue.LocationId)
        @Html.DropDownListFor(v => v.Venue.LocationId, new SelectList(Model.Locations, "value", "text"), "Select", new { @class = "form-control" })
        @Html.ValidationMessageFor(v => v.Venue.LocationId)
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
}
