@model IEnumerable<UberTappDeveloping.Models.Venue>
@{
    ViewBag.Title = "UserVenues";
}

<h2>UserVenues</h2>

<table class="table table-bordered">
    <tr>
        <th>Venue Name</th>
        <th>Date Founded</th>
        <th>Location</th>
        <th></th>
    </tr>
    @foreach (var venue in Model)
    {
        <tr>
            <td>@venue.Name</td>
            <td>@venue.DateOpened</td>
            <td>@venue.Location.Display</td>
            <td>
                <a href="@Url.Action("Edit","venue",new {id = venue.Id })">Edit</a> |
                <a href="@Url.Action("VenueProfile","venue",new {id = venue.Id })">Profile</a>
            </td>
        </tr>
    }

</table>